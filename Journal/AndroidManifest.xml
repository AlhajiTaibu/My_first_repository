<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.amalitech.journal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <activity
            android:name="org.amalitech.journal.Activity_MainNewsPage"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="org.amalitech.journal.Activity_Inputer"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity
            android:name="org.amalitech.journal.Activity_Poster"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity
            android:name="org.amalitech.journal.Activity_Profile"
            android:label="@string/app_name"
            >
        </activity>
        
    </application>

</manifest>
